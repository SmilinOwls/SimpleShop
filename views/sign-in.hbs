<form action="/user/signin" method="POST">
  <!-- Usernam input -->
  <div class="form-outline mb-4">
    <input type="text" name="Username" value="{{lastUser.Username}}" id="form2Example1" class="form-control" />
    <label class="form-label" for="form2Example1">Username</label>
  </div>

  <!-- Password input -->
  <div class="form-outline mb-4">
    <input type="password" name="Password" value="{{lastUser.Password}}" id="form2Example2" class="form-control" />
    <label class="form-label" for="form2Example2">Password</label>
  </div>

  <!-- Time input -->
  <div class="form-outline mb-4">
    <label class="form-label" for="form2Example2">Select expired time (hour) in: </label>
    <select name="expired" class="form-select" aria-label="Default select example">
      {{#each expire}}
      <option value="{{this}}">{{this}} h</option>
      {{/each}}
    </select>
  </div>


  {{#if check}}
  <div class="row mb-4">
    <div class="col d-flex justify-content-center">
      <p style="color: red;">Username or password is not valid!</p>
    </div>
  </div>
  {{/if}}

  <!-- 2 column grid layout for inline styling -->
  <div class="row mb-4">
    <div class="col d-flex justify-content-center">
      <!-- Checkbox -->
      <div class="form-check">
        <input class="form-check-input" name="Remember" type="checkbox" id="form2Example31" checked />
        <label class="form-check-label" for="form2Example31"> Remember me </label>
      </div>
    </div>
  </div>

  <div class="row mb-4 d-flex justify-content-center">
    <!-- Submit button -->
    <button type="submit" style="width: 80px" class="btn btn-primary btn-block mb-4">Sign in</button>
  </div>


  <!-- Register buttons -->
  <div class="text-center">
    <p>Not a member? <a href="/user/signup">Register</a></p>
    <p>or sign up with:</p>
  </div>
</form>